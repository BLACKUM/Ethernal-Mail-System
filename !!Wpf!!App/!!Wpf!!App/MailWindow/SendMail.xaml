<Window x:Class="__Wpf__App.MailWindow.SendMail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:__Wpf__App.MailWindow"
        mc:Ignorable="d"
        Title="Send Message" Height="650" Width="1000" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" Cursor="Arrow">

    <Window.Resources>
    </Window.Resources>

    <Border BorderBrush="{StaticResource Color2}" Background="{StaticResource Color1}" BorderThickness="3" CornerRadius="15" Height="650" VerticalAlignment="Top" Margin="0,0,0,0" Cursor="Arrow">
        <Grid Margin="0,0,0,0">
            <Rectangle Cursor="SizeAll" MouseDown="Drag_MouseDown" Fill="Transparent" Stroke="Transparent" HorizontalAlignment="Left" Height="43" VerticalAlignment="Top" Width="895" Panel.ZIndex="1"/>
            <ComboBox x:Name="UsernameCombobox" HorizontalAlignment="Left" Height="30" Background="{StaticResource Color2}" RenderTransformOrigin="0.167,1.1" Width="47" Margin="150,52,0,0" VerticalAlignment="Top"/>

            <Label Content="To:" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Foreground="{StaticResource Color3}" BorderBrush="{StaticResource Color3}" FontSize="16"/>

            <Label Content="Subject:" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top" Foreground="{StaticResource Color3}" BorderBrush="{StaticResource Color3}" FontSize="16"/>
            <TextBox x:Name="SubjectTextBox" Margin="150,100,150,0" Height="30" VerticalAlignment="Top" Foreground="{StaticResource Color3}" BorderBrush="{StaticResource Color3}" FontSize="16"/>

            <Label Content="Message:" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top" Foreground="{StaticResource Color3}" BorderBrush="{StaticResource Color3}" FontSize="16"/>
            <TextBox x:Name="BodyTextBox" Margin="150,165,150,185" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Foreground="{StaticResource Color3}" BorderBrush="{StaticResource Color3}" FontSize="16"/>

            <Button x:Name="SendButton" Content="Send" Margin="10,520,10,0" VerticalAlignment="Top" Height="38" Click="Send_Click" Style="{StaticResource ButtonStyle}"/>

            <Button x:Name="BackButton" Content="Back" Margin="10,600,10,0" VerticalAlignment="Top" Height="38" Style="{StaticResource ButtonStyle}" Click="BackButton_Click" />

            <Label x:Name="StatusLabel" Content="" HorizontalAlignment="Center" Margin="0,570,0,0" VerticalAlignment="Top" Foreground="{StaticResource Color6}"/>

            <Button Style="{StaticResource MaterialDesignFlatButton}" x:Name="ExitButton" Content="X" HorizontalAlignment="Left" Margin="945,4,0,0" VerticalAlignment="Top" Width="42" Height="26" BorderBrush="#FF1450A0" FontWeight="Bold" Cursor="Hand" Foreground="{StaticResource SeconColor1}" Click="Exit_Click" />

            <Button Style="{StaticResource MaterialDesignFlatButton}" x:Name="CollapseButton" Content="—" HorizontalAlignment="Left" Margin="900,4,0,0" VerticalAlignment="Top" Width="42" Height="26" BorderBrush="#FF1450A0" FontWeight="Bold" Cursor="Hand" Foreground="{StaticResource SeconColor1}" Click="Collapse_Click" />
        </Grid>
    </Border>
</Window>
